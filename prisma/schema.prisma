generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")  
}

model User {
  id        Int   @id @default(autoincrement())
  email     String   @unique
  firstName      String
  lastName String
  hashedPassword  String
  createdAt DateTime @default(now())
}

model Author {
  id        Int   @id @default(autoincrement())
  name      String
  books     Book[]
  createdAt DateTime @default(now())
}

model Book {
  id        Int   @id @default(autoincrement())
  title     String
  createdAt DateTime @default(now())
  authorId    Int
  author      Author  @relation(fields: [authorId], references: [id])
  reviews     Review[]
  }


model Genre {
  id       Int   @id @default(autoincrement())
  name      String
}

model Review {
  id        Int   @id @default(autoincrement())
  rating    Float
  comment   String
  bookId    Int
  book      Book  @relation(fields: [bookId], references: [id])
  createdAt DateTime @default(now())
}